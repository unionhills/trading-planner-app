{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*",
                "src/shared/*"
            ]
        },
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2018",
            "dom"
        ],
        "types": [
            "jasmine",
            "reflect-metadata"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/ui/**/*",
        "test.ts",
        "**/*.spec.ts"
    ]
}
